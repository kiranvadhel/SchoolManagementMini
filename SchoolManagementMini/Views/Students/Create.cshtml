@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">🎓 Add New Student</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="RollNumber" class="form-label fw-bold"></label>
                    <input asp-for="RollNumber" class="form-control" placeholder="Enter Roll Number" />
                    <span asp-validation-for="RollNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EnrollmentDate" class="form-label fw-bold"></label>
                    <input asp-for="EnrollmentDate" class="form-control" type="date" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SchoolClassId" class="form-label fw-bold">Select Class</label>
                    <select asp-for="SchoolClassId" class="form-select" asp-items="ViewBag.SchoolClassId">
                        <option value="">-- Choose Class --</option>
                    </select>
                    <span asp-validation-for="SchoolClassId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Save Student" class="btn btn-primary px-5" />
                    <a asp-action="Index" class="btn btn-outline-secondary ms-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
