@page
@model LogoutModel
@{
    ViewData["Title"] = "Logged Out";
    Layout = "~/Areas/Identity/Pages/_LayoutIdentity.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-5 text-center" style="max-width: 550px; border-radius: 16px;">
        <div class="mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/1828/1828479.png" width="100" alt="Logout Icon" />
        </div>

        <h2 class="text-success fw-bold mb-3">✅ Logged Out Successfully</h2>
        <p class="text-muted fs-5">
            You have been safely signed out of the <strong>Student Management System</strong>.
        </p>

        <a href="/Identity/Account/Login" class="btn btn-primary mt-4 px-4 py-2">
            🔐 Back to Login
        </a>
    </div>
</div>
